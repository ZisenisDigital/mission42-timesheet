# PocketBase Configuration
POCKETBASE_URL=http://127.0.0.1:8090
PB_ADMIN_EMAIL=admin@example.com
PB_ADMIN_PASSWORD=your-secure-password-here

# WakaTime API
# Get your API key from: https://wakatime.com/settings/api-key
WAKATIME_API_KEY=waka_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub API
# Create token at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public only)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_USERNAME=your-github-username

# Google OAuth (Calendar & Gmail)
# Setup at: https://console.cloud.google.com/
# Required APIs: Google Calendar API, Gmail API
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxx
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# Encryption Key (for storing OAuth tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-random-32-byte-key-base64-encoded

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: Individual OAuth tokens (auto-managed, can be left empty initially)
# These will be populated after OAuth flow
GMAIL_TOKEN_1=
GMAIL_REFRESH_TOKEN_1=
CALENDAR_TOKEN_1=
CALENDAR_REFRESH_TOKEN_1=
